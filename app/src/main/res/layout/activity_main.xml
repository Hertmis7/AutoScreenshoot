<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ykmp2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTime3"
        android:layout_width="122dp"
        android:layout_height="33dp"
        android:layout_marginStart="193dp"
        android:layout_marginTop="468dp"
        android:background="@color/white"
        android:text="2021-03-15 10:43"
        android:textColor="@color/time3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--中间显示时间:android:text="2021-03-15 14:13:55"-->
    <TextView
        android:id="@+id/tvTime2"
        android:includeFontPadding="false"
        android:fontFamily="@font/synormal"
        android:layout_width="249dp"
        android:layout_height="41dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/blue32"
        android:gravity="center_horizontal|center_vertical"
        android:text=""
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<!--左上角时间 23:23-->
    <TextView
        android:includeFontPadding="false"
        android:text=""
        android:textSize="13dp"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/tvTime1"
        android:layout_width="45dp"
        android:layout_height="23dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:background="@color/time1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="17dp"
        android:layout_height="20dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/name2"
        android:text="张"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>